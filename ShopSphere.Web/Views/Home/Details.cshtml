@model ProductModel

@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" />
        }
        else
        {
            <img src="/images/no-image-available.png" alt="No image available" class="img-fluid" />
        }
    </div>

    <div class="col-md-6">
        <h3>Description</h3>
        <p>@Model.Description</p>

        <h4>Price: @Model.Price.ToString("C")</h4>

        @if (Model.Category != null)
        {
            <p><strong>Category:</strong> @Model.Category.Name</p>
        }
        <form asp-controller="Cart" asp-action="AddToCart">
            <input type="hidden"  asp-for="Id" value="@Model.Id"/>
            <button type="submit" class="btn btn-primary">Add to Cart</button>
        </form>
    </div>
</div>
